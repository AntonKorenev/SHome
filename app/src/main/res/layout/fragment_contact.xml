<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/contact_message_title"
        android:id="@+id/contact_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backColor"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/contact_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" >

        <EditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_message_value"
            android:id="@+id/message_devs" />
    </ScrollView>

    <ImageButton
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:id="@+id/fab_contact"
        android:layout_alignBottom="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="@dimen/elevation_middle"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_contact"
        android:src="@drawable/mail" />

</RelativeLayout>